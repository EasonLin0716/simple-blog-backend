<section id="profile">
  <div class="row" id="intro">
    <div class="col-left col-9">
      <h2 class="d-inline">{{{user.name}}}</h2>
      {{#ifEqual user.id currentUser.id}}
        <a href="#">Edit Profile</a>
      {{/ifEqual}}
      {{#ifNotEqual user.id currentUser.id}}
        {{#if user.isFollowing}}
          <form action="/users/{{{user.id}}}/follow?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="badge badge-success">Following</button>
          </form>
        {{else}}
          <form action="/users/{{{user.id}}}/follow" method="POST" class="d-inline">
            <button type="submit" class="badge badge-info">Follow</button>
          </form>
        {{/if}}
      {{/ifNotEqual}}
      <p>{{{user.introduction}}}</p>
      <span>{{{user.Followings.length}}} Following</span>
      <span>{{{user.Followers.length}}} Followers</span>
    </div>
    <div class="col-3"><img src="{{{user.avatar}}}" class="rounded-circle" id="avatar" alt="avatar">
    </div>
  </div>
  <div class="d-flex" id="category">
    <a href="/users/{{{user.id}}}">Profile</a>
    <a href="/users/{{{user.id}}}/claps">Claps</a>
    <a href="/users/{{{user.id}}}/highlights">Highlights</a>
    <a href="/users/{{{user.id}}}/responses">Responses</a>
  </div>
  <div id="posts">
    <h3>Latest</h3>
    {{#each posts}}
      <div class="card">
        <div id="info">
          <div id="image">
            <img src="{{{../user.avatar}}}" class="rounded-circle" alt="avatar">
          </div>
          <div id="author">
            <span>{{{../user.name}}}</span>
            <br />
            {{{this.monthDay}}} {{{this.readTime}}}
          </div>
        </div>
        <div id="post">
          <div id="image">
            <img src="{{{this.cover}}}" alt="cover">
          </div>
          <h2>{{{this.title}}}</h2>
          <p>{{{this.content}}}</p>
        </div>
        <div id="buttons">
          <i class="far fa-hand-point-up"></i>
          <i class="far fa-bookmark"></i>
        </div>
      </div>
    {{/each}}
  </div>
</section>