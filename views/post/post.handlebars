<section id="post">
  <h2>{{{post.title}}}</h2>
  <form action="/posts/{{{post.id}}}?_method=DELETE" method="POST">
    <button type="submit" class="btn btn-danger">DELETE THIS POST</button>
  </form>
  <div id="user">
    <div id="info">
      <div id="image">
        <img src="{{{author.avatar}}}" class="rounded-circle" alt="avatar">
      </div>
      <div id="author">
        <span>{{{author.name}}}</span>
        {{#if author.isFollowedByCurrentUser}}
          <form action="/users/{{{author.id}}}/follow?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="badge badge-success">following</button>
          </form>
        {{else}}
          <form action="/users/{{{author.id}}}/follow" method="POST" class="d-inline">
            <button type="submit" class="badge badge-success">follow</button>
          </form>
        {{/if}}
        <br />
        {{{post.monthDay}}} {{{post.readTime}}}
      </div>
    </div>
    <div id="link">
      <i class="fab fa-twitter"></i>
      <i class="fab fa-facebook-square"></i>
      <i class="far fa-bookmark"></i>
    </div>
  </div>
  </div>
  <div id="content">
    {{#if post.cover}}
      <img src="{{{post.cover}}}" alt="cover">
    {{/if}}
    <p>{{{post.content}}}</p>
  </div>
  <div id="buttons">
    <div id="clap">
      <div id="clap-box">
        <i class="icon icon-clap"></i>
      </div>
      <div id="clap-msg">
        {{{post.clappedTimes}}} claps <br />
        {{#if post.applauseFrom}}
          {{{post.applauseFrom}}}
        {{/if}}
      </div>
    </div>
    <div id="links">
      <i class="fab fa-twitter"></i>
      <i class="fab fa-facebook-square"></i>
      <i class="far fa-bookmark"></i>
      <i class="fas fa-ellipsis-h"></i>
    </div>
  </div>
  <hr>
  <div id="written-by">
    <div id="author-info">
      <div id="image">
        <img src="{{{author.avatar}}}" alt="">
      </div>
      <div id="author">
        WRITTEN BY
        <h4>{{{author.name}}}</h4>
        <p>{{{author.introduction}}}</p>
      </div>
    </div>
    <div id="follow-btn">
      {{#if author.isFollowedByCurrentUser}}
        <form action="/users/{{{author.id}}}/follow?_method=DELETE" method="POST">
          <button type="submit" class="badge badge-success">following</button>
        </form>
      {{else}}
        <form action="/users/{{{author.id}}}/follow" method="POST">
          <button type="submit" class="badge badge-success">follow</button>
        </form>
      {{/if}}
    </div>
  </div>
  <hr>
  <a href="#" class="btn btn-block btn-success py-4">Write the first response</a>
  <hr>
</section>