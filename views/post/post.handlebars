<section id="post">
  <h2>{{{post.title}}}</h2>
  <div id="user">
    <div id="info">
      <div id="image">
        <img src="{{{author.avatar}}}" class="rounded-circle" alt="avatar">
      </div>
      <div id="author">
        <span>{{{author.name}}}</span> <button class="badge badge-success">follow</button>
        <br />
        {{{post.monthDay}}} 9 mins read
      </div>
    </div>
    <div id="link">
      <i class="fab fa-twitter"></i>
      <i class="fab fa-facebook-square"></i>
      <i class="far fa-bookmark"></i>
    </div>
  </div>
  </div>
  <div id="content">
    {{#if post.cover}}
      <img src="{{{post.cover}}}" alt="cover">
    {{/if}}
    <p>{{{post.content}}}</p>
  </div>
  <div id="buttons">
    <div id="clap">
      <div>
        <i class="icon icon-clap"></i>
      </div>
      <div id="clap-msg">
        {{{post.clappedTimes}}} claps <br />
        {{#if post.applauseFrom}}
          {{{post.applauseFrom}}}
        {{/if}}
      </div>
    </div>
    <div id="links">
      <i class="fab fa-twitter"></i>
      <i class="fab fa-facebook-square"></i>
      <i class="far fa-bookmark"></i>
      <i class="fas fa-ellipsis-h"></i>
    </div>
  </div>
  <hr>
  <div id="written-by">
    <img src="{{{author.avatar}}}" alt="">
    WRITTEN BY
    {{{author.name}}}
    {{{author.introduction}}}
    <button class="badge badge-success">follow</button>
  </div>
  <hr>
  <a href="#" class="btn btn-success">Write the first response</a>
</section>